{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "allowJs": false,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    ".git",
    "./node_modules",
    "./node_modules/*",
    "data",
    "./data",
    "./data/*",
    "/data",
    "/data/*",
    "./src/data",
    "./src/data/*",
    "/src/data",
    "/src/data/*",
    "./src/node_modules",
    "./src/node_modules/*",
    "/src/node_modules",
    "/src/node_modules/*",
    "**/node_modules/*",
    "**/data/*"
  ]
}
